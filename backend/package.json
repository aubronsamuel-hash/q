{
  "name": "project-backend",
  "version": "1.0.0",
  "main": "src/server.js",
  "scripts": {
    "db:up": "docker compose up -d",
    "db:down": "docker compose down -v",
    "db:logs": "docker compose logs -f postgres",
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "dev:sqlite": "cross-env USE_SQLITE=1 nodemon src/server.js",
    "start:sqlite": "cross-env USE_SQLITE=1 node src/server.js",
    "lint": "eslint .",
    "test": "npm run lint",
    "promote:admin": "node scripts/promoteAdmin.js",
    "db:create": "sequelize-cli db:create",
    "db:migrate": "sequelize-cli db:migrate"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.1",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.35.1",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "nodemon": "^3.0.1",
    "sequelize-cli": "^6.6.3",
    "cross-env": "^7.0.3"
  }
}
